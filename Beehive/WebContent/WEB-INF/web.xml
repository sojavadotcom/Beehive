<?xml version="1.0" encoding="UTF-8"?>
<web-app id="Beehive" version="2.5"
 xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>Beehive</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>com.sojava.beehive</param-value>
	</context-param>
	<session-config>
		<session-timeout>1440</session-timeout>
	</session-config>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:conf/logger/log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60000</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:conf/spring/applicationContext*.xml</param-value>
	</context-param>
	<context-param>
		<param-name>system.encoding</param-name>
		<param-value>UTF-8</param-value>
	</context-param>
	<context-param>
		<param-name>mail.host.smtp</param-name>
		<param-value>localhost</param-value>
	</context-param>
	<context-param>
		<param-name>mail.host.pop3</param-name>
		<param-value>localhost</param-value>
	</context-param>
	<context-param>
		<param-name>mail.host.imap4</param-name>
		<param-value>202.85.215.22</param-value>
	</context-param>
	<context-param>
		<param-name>mail.from</param-name>
		<param-value>service@jxszyyy.cn</param-value>
	</context-param>
	<context-param>
		<param-name>sms.account</param-name>
		<param-value>3SDK-EMY-0130-NGXTN</param-value>
	</context-param>
	<context-param>
		<param-name>sms.password</param-name>
		<param-value>325849</param-value>
	</context-param>
	<context-param>
		<param-name>sms.serviceNumber</param-name>
		<param-value>587025</param-value>
	</context-param>
	<context-param>
		<param-name>business.cache_folder</param-name>
		<param-value>/usr/local/www/jxszyyy_work/ROOT/files/cache</param-value>
	</context-param>
	<context-param>
		<param-name>business.business_folder</param-name>
		<param-value>/usr/local/www/jxszyyy_work/ROOT/files/business</param-value>
	</context-param>
	<context-param>
		<param-name>business.initial_password</param-name>
		<param-value>111111</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
	</listener>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>hibernateOpenSessionInViewFilter</filter-name>
		<filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
	</filter>

	<filter>
		<filter-name>beehiveFilter</filter-name>
		<filter-class>com.sojava.beehive.framework.dispatcher.ExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>beehiveFilter</filter-name>
		<url-pattern>*.shtml</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>beehiveFilter</filter-name>
		<url-pattern>*.s2</url-pattern>
	</filter-mapping>
